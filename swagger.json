      }
    }
  },
  "definitions": {
    "SearchType": {
      "type": "number",
      "enum": [0, 1, 2, 3, 4, 5, 6, 7]
    },
    "AngSources": {
      "type": "string",
      "enum": ["G", "D", "B", "A", "S", "N", "R"]
    },
    "Source": {
      "type": "string",
      "enum": ["G", "D", "B", "A", "S", "N", "R", "all"]
    },
    "Sabad": {
      "type": "object",
      "properties": {
        "shabadInfo": {
          "type": "string"
        }
      }
    }
  }
}
